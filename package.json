{
  "name": "peershare",
  "version": "1.0.0",
  "description": "极简 P2P 文件传输工具",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server/index.ts",
    "build": "bun run scripts/build.ts",
    "start": "bun src/server/index.ts",
    "clean": "bun run scripts/clean.ts",
    "test": "bun test tests/unit",
    "typecheck": "bunx tsc --noEmit --pretty false",
    "test:e2e": "playwright test",
    "test:all": "bun test && playwright test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "@playwright/test": "^1.41.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
